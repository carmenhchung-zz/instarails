<h1>Edit Your Profile</h1>
<div class="container-fluid center">
<%= form_with(model: @profile, url: profile_path, local: true) do |form| %>

  <div class="form-group">
    <%= form.label :Avatar %>:
    <%= form.file_field :image, id: :photo_image_data %>
  </div>

  <div class="form-group">
    <%= form.text_field :firstname, class: 'form-control', placeholder: 'First Name' %>
  </div>

  <div class="form-group">
    <%= form.text_field :lastname, class: 'form-control', placeholder: 'Last Name' %>
  </div>

  <div class="form-group">
    <%= form.text_area :bio, class: 'form-control', placeholder: 'Bio' %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
</div>
